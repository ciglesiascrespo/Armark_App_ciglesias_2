<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_Promociones"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_cardview_promociones"
    android:gravity="center_vertical"
    android:padding="@dimen/padding_carview"
    card_view:cardCornerRadius="@dimen/cardview_default_radius"
    card_view:cardElevation="@dimen/cardview_default_elevation"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_promociones"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:scaleType="centerInside"
            android:src="@drawable/imgpromo" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/margin_left_cardview_promociones"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_nombre_promociones"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:hint="@string/descripcion"
                    android:singleLine="true"
                    android:textSize="@dimen/tamaño_letra_nombre_promocion"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_descripcion_promociones"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:hint="@string/descripcion"
                    android:maxLines="4"
                    android:minLines="2"
                    android:textDirection="firstStrong"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_descuentoPromociones"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/margin_left_cardview_promociones"
                android:layout_weight=".9"
                android:hint="@string/porcentaje"
                android:textSize="@dimen/tamaño_letra_nombre_promocion" />


        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>

